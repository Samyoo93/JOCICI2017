      = f.label 'Apellido'
      = f.text_field :lastName
  .row
    .field.text_field_color
      = f.label 'Correo electr√≥nico'
      = f.email_field :email
  -# .row
  -#   .field
  -#     = raw recaptcha_tag(:challenge)
  .row
    .actions.btn.btn-default
      = f.submit 'Registrarse'
